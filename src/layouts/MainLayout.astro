---
import "../styles/global.css";
import OgMetaTags from "../components/OgMetaTags.astro";
import Header from "../components/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
const { origin } = new URL(Astro.request.url);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="The home of Nick Taylor's live streaming channels"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <OgMetaTags
      title={title}
      description="Links to Nick Taylor's live streaming channels and content"
      socialImage={new URL("/assets/og-image.png", origin).href}
    />
    <title>{title}</title>
  </head>
  <body class="pb-32">
    <div>
      <Header />
      <slot />
    </div>
  </body>
</html>
