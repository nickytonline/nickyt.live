---
interface Props {
  youtubeUrl?: string;
  linkedinUrl?: string;
  cfeLink?: string;
}

const TWITCH_STREAM_URL = "https://www.twitch.tv/nickytonline";
const TWITTER_URL = "https://twitter.com/nickytonline";

const { youtubeUrl, linkedinUrl, cfeLink } = Astro.props;
---

<div>
  Watch live on:
  {
    cfeLink ? (
      <ul class="flex gap-4">
        <li>
          <a href={cfeLink}>CFE.dev</a>
        </li>
      </ul>
    ) : (
      <ul class="flex gap-4">
        <li>
          <a href={TWITCH_STREAM_URL}>Twitch</a>
        </li>
        {youtubeUrl ? (
          <li>
            <a href={youtubeUrl}>YouTube</a>
          </li>
        ) : null}
        {linkedinUrl ? (
          <li>
            <a href={linkedinUrl}>LinkedIn</a>
          </li>
        ) : null}
        <li>
          <a href={TWITTER_URL}>Twitter</a>
        </li>
      </ul>
    )
  }
</div>
<style>
  a:not(class) {
    text-decoration: underline;
  }
</style>
